---
interface Props {
  stepNumber: number;
  title: string;
  description: string;
}

const { stepNumber, title, description } = Astro.props;
---

<div class="flex items-start gap-4 p-4 bg-neutral-50 rounded-lg border border-neutral-200 transition-colors hover:bg-neutral-100">
  <div class="flex-shrink-0 w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold text-sm">
    {stepNumber}
  </div>
  <div>
    <h3 class="font-semibold text-neutral-800">{title}</h3>
    <p class="text-neutral-600 text-sm mt-1">{description}</p>
  </div>
</div>

